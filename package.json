{
  "name": "butter-mail",
  "private": true,
  "version": "0.1.1",
  "main": "main.js",
  "description": "privacy-first modern email client with intelligent search + categorization",
  "author": "mehek niwas",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.0.0",
    "density-clustering": "^1.3.0",
    "imapflow": "^1.0.170",
    "mailparser": "^3.7.1",
    "nodemailer": "^6.9.0",
    "ml-pca": "^4.1.1",
    "three": "^0.169.0",
    "wink-bm25-text-search": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^25.1.0"
  },
  "build": {
    "appId": "com.mehekn.buttermail",
    "productName": "butter mail",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/bread-butter.ico"
    },
    "nsis": {
      "perMachine": false,
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "butter mail"
    }
  }
}
